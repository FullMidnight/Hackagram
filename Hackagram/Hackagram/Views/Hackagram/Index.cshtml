@model Hackagram.Models.Question
@{
    ViewBag.Title = "Hackagram";
}


@if (ViewBag.Username == "")
{
    <script>
        window.addEventListener('load',
            function () {
                document.body.style.background = "#fafafa";
            }, false);
    </script>
    <div class="container" style="width:100%; height:100%">
        <div class="row">
            @*<div class="col-lg-offset-4">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/41IU0lFE8CL._SY450_.jpg"/>
                </div>*@
            <div class="col-sm-offset-3">
                <div class="card box" style="max-width:350px; min-height:100px; max-height:275px;min-height:50px; margin-left:40px; margin-top:60px">
                    <div class="card-body">
                        <h1 class="text-center">Hackagram</h1>
                        <form method="post" action="@Url.Action("ValidateLogin", "Hackagram")">
                            <input name="Username" class="input-2" type="text" placeholder="Username" />
                            <input name="Password" class="input-2" type="password" placeholder="Password" />
                            <input class="btn" type="submit" />
                        </form>
                        @*<a class="text-center" href="https://www.google.com">Forgot Password?</a>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-3">
                <div class="card box" style="max-width:350px; min-height:100px; max-height:275px;min-height:50px; margin-left:40px">
                    <div class="card-body">
                        @if (ViewBag.invalidLogin)
                        {
                            <p style="color:red">@ViewBag.invalidLoginMessage</p>
                        }
                        <p style="width:350px">Don't have an account? <a href="~/Views/Hackagram/Login.cshtml">Sign up</a></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <style>
        .header {
            padding: 10px;
        }

        .box {
            padding: 10px;
            margin: 10px;
        }

        .btn {
            width: 100%;
            background-color: #3897f0;
            border: 1px solid #3897f0;
            padding: 5px 12px;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            border-radius: 3px;
        }

        .input-1,
        .input-2 {
            width: 100%;
            margin-bottom: 5px;
            padding: 8px 12px;
            border: 1px solid #dbdbdb;
            box-sizing: border-box;
            border-radius: 3px;
        }
    </style>
}
else if (ViewBag.Username == "Basic")
{



    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <img id="instagram-icon" src="~/img/instagram-icon-logo.jpg" />
                    <span id="instagram-title">Hackagram</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <img class="instagram-image" src="~/img/Hackbox_2018.jpg" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="glyphicon glyphicon-heart-empty"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @using (Ajax.BeginForm("ValidateAnswer", "Home", new AjaxOptions
                    {
                        OnSuccess = "OnSuccess",
                        OnFailure = "OnFailure"
                    }))
                    {
                        @Html.TextBoxFor(m => m.Excercise, new { @class = "form-control", Value = "Hackagram", style = "display:none", @readonly = "true" })
                        @Html.TextBoxFor(m => m.QuestionNumber, new { @class = "form-control", Value = 2, style = "display:none", @readonly = "true" })
                        @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
                        <input class="btn btn-primary" type="submit" value="Post" />
                    }
                    <ul id="posts"></ul>


                </div>
            </div>
        </div>
    </div>
    <div id="alertBox" style="display:none" class="alert alert-success alert-dismissable" role="alert">
        <strong>Congrats!</strong> You just answered a question!. Check it out at <a href="@Url.Action("Questions", "Home")" class="alert-link">an example link</a>
        <span type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </span>
    </div>
    <script type="text/javascript">
        alert('O.M.G! Basic much?');
        function OnSuccess(response) {
            if (response.Message == 'success') {
                $('#alertBox').show()
            }

            $('#posts').append("<li><div id=\"commentBox\" class=\"well\"></div></li>")
            $('#commentBox')[0].innerHTML = response.AnswerUsed
        }
        function OnFailure(response) {
            $('#posts').append("<li><div id=\"commentBox\" class=\"well\"></div></li>")
            $('#commentBox')[0].innerHTML = response.AnswerUsed
        }

    </script>
}
