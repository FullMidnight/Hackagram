@model Hackagram.Models.Question
@{
    ViewBag.Title = "Hackagram";
}
<link rel="stylesheet" href="~/Content/custom-styles.css" />

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <img id="instagram-icon" src="~/img/instagram-icon-logo.jpg" />
                <span id="instagram-title">Hackagram</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <img class="instagram-image" src="~/img/Hackbox_2018.jpg" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="glyphicon glyphicon-heart-empty"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("ValidateAnswer", "Home", FormMethod.Post, new { @class = "form-inline", role = "form" }))
                {
                    @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
                    <input class="btn btn-primary" type="submit" value="Post" />
                }
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
